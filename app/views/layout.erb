<!doctype html>
<html>
  <head>
    <title>OwnCollection</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>
    <div class="navbar justify-content-end bg-info">
      <% if logged_in? %>
      <ul class="nav justify-content-end">
        <li class="nav-item">
          <a class="nav-link text-white" href="/boards">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" href="/users/<%= current_user.slug %>"><%= current_user.username.capitalize %></a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" href="/boards/new">Create board</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" href="/items/new">Create item</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" href="/logout">Log Out</a>
        </li>
      </ul>
      <% else %>
      <ul class="nav justify-content-end">
        <li class="nav-item">
          <a class="nav-link text-white" href="/signup">Sign up</a>
        </li>
        <li class= "nav-item">
          <a class="nav-link text-white" href="/login">Log in</a>
        </li>
      </ul>
      <%end %>
    </div>

    <% if flash.has?(:message) %>
    <div class="alert alert-danger alert-dismissible fade show container text-center col-sm-6 justify-content-center" role="alert">
      <strong><%= flash[:message] %><strong>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <% end %>

    <div id="main" class="container text-center">
      <%= yield %>
    </div>

    <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
  </body>
</html>
