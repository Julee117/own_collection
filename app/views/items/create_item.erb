<h1>Create item</h1>
<br>

<form action="/items" method="POST">
  <div class="form-group row">
  <label class="col-sm-2 col-form-label">Add a description</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="item[description]" placeholder="Description..">
    </div>
  <label class="col-sm-2 col-form-label">Link to website</label>
    <div class="col-sm-10">
       <input type="text" class="form-control" name="item[url]" placeholder="http://">
    </div>
  <label class="col-sm-2 col-form-label">Source of website</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="item[site_source]" placeholder="Like 'Crate and Barrel'">
    </div>
  <label class="col-sm-2 col-form-label">Add to your board</label>
    <div class="col-sm-10">
      <select name="item[board_id]" class="form-control">
        <% current_user.boards.each do |board| %>
        <option value="<%= board.id %>"><%= board.name %></option>
        <% end %>
      </select>
    </div>
  </div>
  <input type="submit" class="btn btn-info" value="submit">
</form>
