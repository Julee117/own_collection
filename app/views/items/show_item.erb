<div class="show-item">
  <h2 class="show-h2"><%= @item.description %></h2>
  <img class="show-img" src="<%= @item.image %>" />
  <p class="lead">From <a id="site" href="<%= @item.url %>" target="_blank"><%= @item.site_source %></a></p>
  <% if @item.board.user_id == current_user.id %>
    <a class="btn btn-outline-info btn-sm" href="/items/<%= @item.id %>/edit">Edit item</a>
  <% end %>
  <a class="btn btn-outline-info btn-sm" href="/items">Back to items</a>
</div>
<br><br>
<div id="review-form">
  <h4>Review</h4>
  <div class="row justify-content-md-center">
    <form action="/items/<%= @item.id %>/reviews" method="POST">
      <div class="form-group">
        <label>Comment</label>
        <input type="text" class="form-control" name="review[comment]" >
      </div>
      <input type="submit" class="btn btn-info" value="Submit">
    </form>
  </div>
</div>
<br>
<div class="container">
<% @item.reviews.each do |review| %>
  <div class="show-comment">
    <p class="name"><%= review.user.username.capitalize %></p>
    <p class="comment"><%= review.comment%></p>
  </div>
<% end %>
</div>
