<h1 class="display-4">Welcome, <%= current_user.username.capitalize %></h1>
<h1>Explore</h1>
<div class="board-wrapper text-info">
  <div class="board-column">
  <% @boards.each do |board| %>
    <div class="display-pics">
      <% board.items[0..6].each do |item| %>
        <img class="tiny-pic" src="<%= item.image %>">
      <% end %>
      <p><a class="text-info" href="/boards/<%= board.slug %>"><%= board.name %></a></p>
    </div>
  <% end %>
  </div>
</div>
